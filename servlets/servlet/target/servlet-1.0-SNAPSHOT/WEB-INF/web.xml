 <web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      version="5.0">


  <display-name>ODS_ResrcSysApp</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>com.school.services.providers.Schoolapp</servlet-name>

    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
 <!--
    <init-param>
      <param-name>jakarta.ws.rs.core.Application</param-name>
      <param-value>com.school.services.providers.Approot</param-value>
    </init-param>
  -->

    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>com.school.services.providers</param-value>
    </init-param>
    
    <init-param>
      <param-name>jersey.config.servlet.provider.webapp</param-name>
      <param-value>true</param-value>
    </init-param>

    <init-param>
      <param-name>jersey.config.servlet.provider.classpath</param-name>
      <param-value>/WEB-INF/classes</param-value>
    </init-param>

    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>com.school.services.providers.Schoolapp</servlet-name>
    <url-pattern>/resources/*</url-pattern>
  </servlet-mapping>
</web-app>
